<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.Otp_Activity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp">

        <!-- Toolbar/Back Button Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/back_arrow"
                app:tint="@color/white" />
        </RelativeLayout>

        <!-- Title and Instruction Section -->

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="250dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/layout_background">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Your OTP"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have sent a 6-digit code to your registered mobile number."
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvGetMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(+91) 98765-43210"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- OTP Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/otp_box_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:imeOptions="actionNext"
                android:layout_margin="2dp" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/otp_box_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:imeOptions="actionNext"
                android:layout_margin="2dp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/otp_box_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:imeOptions="actionNext"
                android:layout_margin="2dp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/otp_box_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:layout_margin="2dp" />


        </LinearLayout>

        <!-- Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerify"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_design"
            android:text="Verify OTP"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvResendTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can resend the OTP in 00:59"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/btnResendOtp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Resend OTP"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    </LinearLayout>
</layout>
